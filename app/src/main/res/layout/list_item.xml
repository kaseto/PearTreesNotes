<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_todo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/image_view_idea"
        android:padding="4dp"
        app:srcCompat="@drawable/baseline_add_24" />

    <ImageView
        android:id="@+id/image_view_idea"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/image_vew_important"
        android:padding="4dp"
        app:srcCompat="@drawable/baseline_wb_incandescent_24" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_title"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image_vew_important"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="4dp"
        app:srcCompat="@drawable/baseline_warning_24" />
</RelativeLayout>